### Concat q ###

rule concat_Q_rep:
  input:
      expand("output/PGA_test/SimpleGrid/{{rep}}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/q-{correction}_{nsnp}.txt", config=CONFIG, gwas_size = GWAS_SIZE, test_size = TEST_SIZE, nsnp=NSNP, h2=HERITABILITY, nc=NUM_CAUSAL, env=ENV, pheno=PHENO, test=TEST, correction = CORRECTION)
  output:
    qx="plots/SimpleGrid/A/q_{rep}.txt"
  shell:
    """
    Rscript code/plot/concat_q_rep_SimpleGrid.R {input} {output}
    """

rule concat_Q_all:
  input:
      expand("plots/SimpleGrid/A/q_{rep}.txt", rep = REP)
  output:
    qx="plots/SimpleGrid/A/q_PCs.txt"
  shell:
    """
    Rscript code/plot/concat_all.R {input} {output}
    rm {input}
    """

