rule format_covars:
    input:
      pops = "output/Simulate_Genotypes/SimpleGrid/{rep}/genos.pop",
      FGr = "output/Calculate_FGr/SimpleGrid/{rep}/{gwas_size}/{test_size}/{test}/FGr-{nsnp}.txt",
      PC = "output/Calculate_FGr/SimpleGrid/{rep}/{gwas_size}/{test_size}/genos-gwas-{nsnp}.eigenvec"
    output:
      "output/Calculate_FGr/SimpleGrid/{rep}/{gwas_size}/{test_size}/{test}/covars-{nsnp}.txt",
    shell:
      """
      Rscript code/Run_GWAS/format_covars_SimpleGrid.R {input.pops} {input.FGr} {input.PC} {output} {wildcards.test}
      """

rule gwas_no_correction:
  input:
      genos = "output/Simulate_Genotypes/SimpleGrid/{rep}/genos.psam",
      gwas = "output/Simulate_Genotypes/SimpleGrid/{rep}/{gwas_size}/{test_size}/ids.gwas",
      snps = "output/Simulate_Genotypes/SimpleGrid/{rep}/{gwas_size}/{test_size}/common_snps_{nsnp}.txt",
      pheno="output/Simulate_Phenotypes/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/genos-gwas-{nsnp}.phenos.txt"
  output:
      "output/Run_GWAS/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/genos_gwas_{nsnp}_NoCorrection.pheno_strat.glm.linear"
  params:
      plink_prefix = "output/Simulate_Genotypes/SimpleGrid/{rep}/genos",
      out_prefix = "output/Run_GWAS/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/genos_gwas_{nsnp}_NoCorrection"
  shell:
      """
      plink2 \
      --pfile {params.plink_prefix} \
      --keep {input.gwas} \
      --extract {input.snps} \
      --glm allow-no-covars \
      --pheno {input.pheno} \
      --pheno-name pheno_strat \
      --out {params.out_prefix}
      """

rule gwas_FGr:
  input:
      genos = "output/Simulate_Genotypes/SimpleGrid/{rep}/genos.psam",
      gwas = "output/Simulate_Genotypes/SimpleGrid/{rep}/{gwas_size}/{test_size}/ids.gwas",
      snps = "output/Simulate_Genotypes/SimpleGrid/{rep}/{gwas_size}/{test_size}/common_snps_{nsnp}.txt",
      pheno = "output/Simulate_Phenotypes/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/genos-gwas-{nsnp}.phenos.txt",
      covar = "output/Calculate_FGr/SimpleGrid/{rep}/{gwas_size}/{test_size}/{test}/covars-{nsnp}.txt"
  output:
      "output/Run_GWAS/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/genos_gwas_{nsnp}_FGr.pheno_strat.glm.linear"
  params:
      plink_prefix = "output/Simulate_Genotypes/SimpleGrid/{rep}/genos",
      out_prefix = "output/Run_GWAS/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/genos_gwas_{nsnp}_FGr"
  shell:
      """
      plink2 \
      --pfile {params.plink_prefix} \
      --keep {input.gwas} \
      --extract {input.snps} \
      --glm hide-covar \
      --pheno {input.pheno} \
      --pheno-name pheno_strat \
      --covar {input.covar} \
      --covar-col-nums 4 \
      --out {params.out_prefix}
      """

rule gwas_ID:
  input:
      genos = "output/Simulate_Genotypes/SimpleGrid/{rep}/genos.psam",
      gwas = "output/Simulate_Genotypes/SimpleGrid/{rep}/{gwas_size}/{test_size}/ids.gwas",
      snps = "output/Simulate_Genotypes/SimpleGrid/{rep}/{gwas_size}/{test_size}/common_snps_{nsnp}.txt",
      pheno="output/Simulate_Phenotypes/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/genos-gwas-{nsnp}.phenos.txt",
      covar="output/Calculate_FGr/SimpleGrid/{rep}/{gwas_size}/{test_size}/{test}/covars-{nsnp}.txt"
  output:
      "output/Run_GWAS/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/genos_gwas_{nsnp}_ID.pheno_strat.glm.linear"
  params:
      plink_prefix = "output/Simulate_Genotypes/SimpleGrid/{rep}/genos",
      out_prefix = "output/Run_GWAS/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/genos_gwas_{nsnp}_ID"
  shell:
      """
      plink2 \
      --pfile {params.plink_prefix} \
      --keep {input.gwas} \
      --extract {input.snps} \
      --glm  hide-covar \
      --pheno {input.pheno} \
      --pheno-name pheno_strat \
      --covar {input.covar} \
      --covar-col-nums 5 \
      --out {params.out_prefix}
      """

rule gwas_PCs:
  input:
      genos = "output/Simulate_Genotypes/SimpleGrid/{rep}/genos.psam",
      gwas = "output/Simulate_Genotypes/SimpleGrid/{rep}/{gwas_size}/{test_size}/ids.gwas",
      snps = "output/Simulate_Genotypes/SimpleGrid/{rep}/{gwas_size}/{test_size}/common_snps_{nsnp}.txt",
      pheno="output/Simulate_Phenotypes/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/genos-gwas-{nsnp}.phenos.txt",
      covar="output/Calculate_FGr/SimpleGrid/{rep}/{gwas_size}/{test_size}/{test}/covars-{nsnp}.txt"
  output:
      "output/Run_GWAS/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/genos_gwas_{nsnp}_{pc}.pheno_strat.glm.linear"
  params:
      plink_prefix = "output/Simulate_Genotypes/SimpleGrid/{rep}/genos",
      out_prefix = "output/Run_GWAS/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/genos_gwas_{nsnp}_{pc}",
      pcs = lambda wildcards: get_pc_num(wildcards.pc)
  shell:
      """
      plink2 \
      --pfile {params.plink_prefix} \
      --keep {input.gwas} \
      --extract {input.snps} \
      --glm hide-covar \
      --pheno {input.pheno} \
      --pheno-name pheno_strat \
      --covar {input.covar} \
      --covar-col-nums {params.pcs} \
      --out {params.out_prefix}
      """

######################
### Ascertain SNPs ###
######################

rule pick_SNPS:
    input:
      causal_effect="output/Simulate_Phenotypes/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/genos-gwas-{nsnp}.effects.txt",
      gwas="output/Run_GWAS/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/genos_gwas_{nsnp}_{correction}.pheno_strat.glm.linear"
    output:
      c="output/PRS/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/genos-gwas_{nsnp}_{correction}.c.betas",
      nc="output/PRS/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/genos-gwas_{nsnp}_{correction}.nc.betas"
    params:
      num_snps = lambda wildcards: get_params(wildcards.nc)
    shell:
      """
      Rscript code/PRS/clump.R {input.causal_effect} {input.gwas} {params.num_snps} {output.c} {output.nc}
      rm {input.gwas}
      """

########################
### Association Test ###
########################

rule calc_Qx:
  input:
    c="output/PRS/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/genos-gwas_{nsnp}_{correction}.c.betas",
    nc="output/PRS/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/genos-gwas_{nsnp}_{correction}.nc.betas",
    genos = "output/Simulate_Genotypes/SimpleGrid/{rep}/genos.psam",
    Tvec="output/Calculate_FGr/SimpleGrid/{rep}/{gwas_size}/{test_size}/{test}/Tvec.txt",
    es="output/Simulate_Phenotypes/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/genos-gwas-{nsnp}.effects.txt"
  output:
    qx="output/PGA_test/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/q-{correction}_{nsnp}.txt"
  params:
    num=NUM_RESAMPLE,
    plink_prefix = "output/Simulate_Genotypes/SimpleGrid/{rep}/genos"
  shell:
    """
    Rscript code/PGA_test/calc_Q.R {params.plink_prefix} {input.c} {input.nc} {input.Tvec} {input.es} {params.num} {output}
    rm {input.c}
    """

rule calc_Qx_long:
  input:
    c="output/PRS/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/genos-gwas_{nsnp}_{correction}.c.betas",
    nc="output/PRS/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/genos-gwas_{nsnp}_{correction}.nc.betas",
    genos = "output/Simulate_Genotypes/SimpleGrid/{rep}/genos.psam",
    pops="output/Simulate_Genotypes/SimpleGrid/{rep}/genos.pop",
    es="output/Simulate_Phenotypes/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/genos-gwas-{nsnp}.effects.txt"
  output:
    qx="output/PGA_test/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/long-{correction}_{nsnp}.txt"
  params:
    num=NUM_RESAMPLE,
    plink_prefix = "output/Simulate_Genotypes/SimpleGrid/{rep}/genos"
  shell:
    """
    Rscript code/PGA_test/calc_Q_long.R {params.plink_prefix} {input.c} {input.nc} {input.pops} {input.es} {params.num} {output}
    rm {input.c}
    """

################
### Make PGS ###
################

rule calc_PRS:
  input:
    effects="output/PRS/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/genos-gwas_{nsnp}_{correction}.nc.betas",
    genos = "output/Simulate_Genotypes/SimpleGrid/{rep}/genos.psam",
    IDs = "output/Simulate_Genotypes/SimpleGrid/{rep}/{gwas_size}/{test_size}/ids.test",
    snps = "output/Simulate_Genotypes/SimpleGrid/{rep}/{gwas_size}/{test_size}/common_snps_{nsnp}.txt"
  output:
    "output/PRS/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/prs-{correction}_{nsnp}.sscore"
  params:
    plink_prefix = "output/Simulate_Genotypes/SimpleGrid/{rep}/genos",
    out_prefix = "output/PRS/SimpleGrid/{rep}/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/prs-{correction}_{nsnp}"
  shell:
    """
    plink2 \
	  --pfile {params.plink_prefix} \
	  --out {params.out_prefix} \
	  --keep {input.IDs} \
	  --extract {input.snps} \
		--score {input.effects} cols=dosagesum,scoresums
		rm {input.effects}
    """

rule format_PRS:
  input:
    prs=expand("output/PRS/SimpleGrid/{rep}/{{gwas_size}}/{{test_size}}/{{h2}}/{{nc}}/{{env}}/{{pheno}}/{{test}}/prs-{{correction}}_{{nsnp}}.sscore", rep=REP),
    pops="output/Simulate_Genotypes/SimpleGrid/A1/genos.pop"
  output:
    "plots/SimpleGrid/{gwas_size}/{test_size}/{h2}/{nc}/{env}/{pheno}/{test}/prs-{correction}_{nsnp}.txt"
  shell:
    """
    Rscript code/PRS/summarize_prs_SimpleGrid.R {output} {input.pops} {input.prs}
    rm {input.prs}
    """

