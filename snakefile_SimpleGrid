    shell:
        """
	      Rscript code/Calculate_FGr/bootstrap_error.R {input} {output}
			  """

rule compute_tildeFGr:
    input:
        expand("output/Calculate_FGr/SimpleGrid/{rep}/{{gwas_size}}/{{test_size}}/{{test}}/covars-{{nsnp}}.txt", rep=REP)
    output:
        "output/Calculate_FGr/SimpleGrid/{rep}/{gwas_size}/{test_size}/{test}/LOCO_FGr-{nsnp}.txt"
    shell:
        """
	      Rscript code/Calculate_FGr/compute_LOCO_FGr.R {wildcards.rep} {output} {input}
			  """

rule compute_error_tildeFGr:
    input:
        tildeFGr = "output/Calculate_FGr/SimpleGrid/{rep}/{gwas_size}/{test_size}/{test}/LOCO_FGr-20000.txt",
        covars = "output/Calculate_FGr/SimpleGrid/{rep}/{gwas_size}/{test_size}/{test}/covars-{nsnp}.txt"
    output:
        "output/Calculate_FGr/SimpleGrid/{rep}/{gwas_size}/{test_size}/{test}/Error-{nsnp}.txt"
    shell:
        """
	      Rscript code/Calculate_FGr/calc_error_SimpleGrid.R {wildcards.rep} {output} {input}
			  """

